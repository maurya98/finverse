{
  "name": "@finverse/logger",
  "version": "1.0.0",
  "description": "Universal pino-based logger for the monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "pnpm exec vitest run --config config/vitest.config.ts",
    "test:watch": "pnpm exec vitest --config config/vitest.config.ts",
    "build": "pnpm test && tsc -b"
  },
  "keywords": ["logger", "pino", "logging"],
  "author": "Saurabh Kumar Maurya",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2",
  "dependencies": {
    "pino": "^9.5.0"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
